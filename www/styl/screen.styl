@import colors
@import prefixes
@import 'components/triangle'

tableHeight = 250px
barsHeight = 300px

.ig
  @import basics
.ig
  font-family 'Roboto', helvetica, arial, sans-serif
  width calc(100% - 40px)
  position relative
  left 30px
  .display
    position relative
    float left
    width calc(50% - 20px)
    height 650px
    h2
      font-size 1.5em
      position absolute
      top 10px
      left 0px
      margin 0px
      font-weight 500
    .bars
      top tableHeight
      position absolute
      width 100%
      height barsHeight
      .year
        float left
        width (100% / 25)
        border-left 1px solid white
        height 100%
        position relative
        .item
          position absolute
          width 100%
          transition bottom 0.6s, opacity 0.2s
          &:hover
            opacity 0.5
      &.highlight
        .item
          opacity 0.1
          &.active
            opacity 1
            bottom 0px !important
    ol.top-ten
      list-style-type none
      margin 0px
      padding 0px
      position absolute
      top 23px
      right 0px
      width (150px + 75px)
      li
        position absolute
        clear left
        font-size 0.9em
        transition top 0.8s
        span
          padding 2px 0px
        span.name
          display block
          float left
          width 150px
          padding-left 19px
        span.amount
          font-weight 500
          display block
          float left
          width 75px
          text-align right
          padding-right 5px
        div.square
          position absolute
          top 9px
          left 6px
          width 5px
          height 5px

        &.odd span
          background #fa
        &:hover span
          font-weight 700
    .top-ten-heading
      position absolute
      top 0px
      right 0px
      background #fa
      width (150px + 75px)
      font-size 0.9em
      font-weight 500
      padding 2px 0px 2px 19px
      border-bottom 1px solid #d0

    .legend
      position absolute
      top (tableHeight + barsHeight + 23px)
      width 100%
      font-size 0.8em
      .item
        position absolute
        bottom 0px
        transform translate(-50%, 0)

    &:nth-of-type(2)
      float right
      .top-ten
      .top-ten-heading
        left 0px
      h2
        left auto
        right 0px


